{% extends 'newlayoutHome.html.twig' %}
	{% block title %}
	{% trans %}
	Board Members
{% endtrans %}
{% endblock  %}
	{% block body %}
		<section class="trainer_area section_gap_top"> <div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-5">
					<div class="main_title">
						<h2 class="mb-3">IRB Borad Members</h2>
						<p>
							Replenish man have thing gathering lights yielding shall you
						</p>
					</div>
				</div>
			</div>
			<div
				class="row justify-content-center d-flex align-items-center">
                {% for board_member in boardMembers %}
				<div class="col-lg-3 col-md-6 col-sm-12 single-trainer">
					<div class="thumb d-flex justify-content-sm-center">
						{% if board_member.user.profile and  board_member.user.profile.image %}
							<img class="img-fluid" src="{{ asset(profile_pictures~'/'~board_member.user.profile.image) }}"
                            style="height:250px;width:250px;"
                             alt="user">
						{% else %}
							<img class="img-fluid" src="{{ asset('defaultuser.png') }}" alt="user" style="height:250px;width:250px;">
						{% endif %}
					</div>
					<div class="meta-text text-sm-center">
						<h4>
                        {% if board_member.user.profile %}
                        {{board_member.user}}
                        {% else %}
                            {{board_member.user.email}}
                        {% endif %}
                        
                        {{board_member.user}}
                        
                        </h4>
						<p class="designation">
							{{board_member.role}}
						</p>
						<div class="mb-4">
							<p>
								{{board_member.user.email}}
							</p>
						</div>
						<div class="align-items-center justify-content-center d-flex">
							<a href="#">
								<i class="ti-facebook"></i>
							</a>
							<a href="#">
								<i class="ti-twitter"></i>
							</a>
							<a href="#">
								<i class="ti-linkedin"></i>
							</a>
							<a href="#">
								<i class="ti-pinterest"></i>
							</a>
						</div>
					</div>
				</div>
                {% endfor %}
			</div>
		</div>
	</section>
{% endblock  %}

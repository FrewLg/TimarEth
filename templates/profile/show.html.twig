{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <h1>Profile</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ profile.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ profile.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ profile.lastName }}</td>
            </tr>
            <tr>
                <th>AlternativeEmail</th>
                <td>{{ profile.alternativeEmail }}</td>
            </tr>
            <tr>
                <th>Department</th>
                <td>{{ profile.department }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ profile.phoneNumber }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ profile.birthDate ? profile.birthDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ profile.title }}</td>
            </tr>
            <tr>
                <th>NationalID</th>
                <td>{{ profile.nationalID }}</td>
            </tr>
            <tr>
                <th>Signature</th>
                <td>{{ profile.signature }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_profile_index') }}">back to list</a>

    <a href="{{ path('app_profile_edit', {'id': profile.id}) }}">edit</a>

    {{ include('profile/_delete_form.html.twig') }}
{% endblock %}

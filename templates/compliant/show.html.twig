{% extends 'base.html.twig' %}

{% block title %}Compliant{% endblock %}

{% block body %}
    <h1>Compliant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ compliant.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ compliant.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ compliant.email }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ compliant.message }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ compliant.createdAt ? compliant.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Solved</th>
                <td>{{ compliant.solved ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_compliant_index') }}">back to list</a>

    <a href="{{ path('app_compliant_edit', {'id': compliant.id}) }}">edit</a>

    {{ include('compliant/_delete_form.html.twig') }}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Status index
{% endblock %}

{% block body %}
	<div class="card card-custom gutter-b">
		<div class="card-header flex-wrap border-0 pt-6 pb-0">
			<div class="card-title">
				<h3 class="card-label">{% trans %}Status{% endtrans %}

					<span class="d-block text-muted pt-2 font-size-sm">{% trans %}Protocol statuses{% endtrans %}</span>
				</h3>
			</div>
			<div class="card-title">
				<a href="{{ path('app_s_e_r_o_status_new') }}" class="btn btn-light-success">Create new</a>
			</div>
		</div>
		<div class="card-body">
			<table class="table ">
				<thead>
					<tr>
						<th>#</th>
						<th>Name</th>
						<th>Code</th>
						<th>Color</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for status in statuses %}
						<tr>
							<td>{{ status.id }}</td>
							<td>{{ status.name }}</td>
							<td>{{ status.code }}</td>
							<td>{{ status.color }}</td>
							<td>
								<a href="{{ path('app_s_e_r_o_status_show', {'id': status.id}) }}">show</a>
								<a href="{{ path('app_s_e_r_o_status_edit', {'id': status.id}) }}">edit</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>


		</div>
	</div>
{% endblock %}

{{form_start(form) }}
<div class="my-2">
	<div class="card   p-4">

		<div class="form-group row">

			<label class="col-form-label col-3 text-lg-right text-left">Status</label>
			<div class="col-9">
				{{form_widget(form.status ) }}
			</div>
		</div>

		<div class="form-group row">

			<label class="col-form-label col-3 text-lg-right text-left">User</label>
			<div class="col-8">
				{{form_widget(form.user)}}
			</div>
		</div>
		<div class="form-group row">

			<label class="col-form-label col-3 text-lg-right text-left">Role</label>
			<div class="col-9">

				{{form_widget(form.role,{'attr':{'class':'select2'}})}}
 			</div>
		</div>

		<div class="form-group row">

			<label class="col-form-label col-3 text-lg-right text-left"></label>

			<div class="col-9">

				<button type="submit" class="btn btn-light-primary  btn-block col-6 float-end">
					Register 
				</button>
			</div>
		</div>
	</div>
</div>
{{ form_end(form) }}

{% extends 'base.html.twig' %}

{% block title %}Attachment{% endblock %}

{% block body %}
    <h1>Attachment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ attachment.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ attachment.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ attachment.description }}</td>
            </tr>
            <tr>
                <th>UploadedAt</th>
                <td>{{ attachment.uploadedAt ? attachment.uploadedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_s_e_r_o_attachment_index') }}">back to list</a>

    <a href="{{ path('app_s_e_r_o_attachment_edit', {'id': attachment.id}) }}">edit</a>

    {{ include('sero/attachment/_delete_form.html.twig') }}
{% endblock %}

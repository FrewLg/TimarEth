{% extends 'base.html.twig' %}

{% block title %}Downloadables{% endblock %}

{% block body %}
    <h1>Downloadables</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ downloadable.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ downloadable.name }}</td>
            </tr>
            <tr>
                <th>Attachment</th>
                <td>{{ downloadable.attachment }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ downloadable.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ downloadable.createdAt ? downloadable.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_downloadables_index') }}">back to list</a>

    <a href="{{ path('app_downloadables_edit', {'id': downloadable.id}) }}">edit</a>

    {{ include('downloadables/_delete_form.html.twig') }}
{% endblock %}

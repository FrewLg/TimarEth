{% extends 'base.html.twig' %}

{% block title %}Downloadables index{% endblock %}

{% block body %}
    <h1>Downloadables index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Attachment</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for downloadable in downloadables %}
            <tr>
                <td>{{ downloadable.id }}</td>
                <td>{{ downloadable.name }}</td>
                <td>{{ downloadable.attachment }}</td>
                <td>{{ downloadable.description }}</td>
                <td>{{ downloadable.createdAt ? downloadable.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_downloadables_show', {'id': downloadable.id}) }}">show</a>
                    <a href="{{ path('app_downloadables_edit', {'id': downloadable.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_downloadables_new') }}">Create new</a>
{% endblock %}

{% extends 'homelayout.html.twig' %}

{% block title %}New Opportunity
{% endblock %}

{% block body %}

	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-header">
					<div class="row align-items-center">
						<div class="col">
							<h4 class="card-title">
								Permissions
							</h4>
							{# Total: ({{permissions|length}}) #}
						</div>
						<!--end col-->
						<div class="col-auto">
							<a href="{{ path('app_timar_opportunity_index') }}">back to list</a>

						</div>
						<!--end col-->
					</div>
				</div>
				<div class="card-body">
					{{ form_start(form) }}
					<button class="btn btn-light-success">{{ button_label|default('Save') }}</button>

					{{ form_widget(form) }}
					{{ form_end(form) }}

				</div>
				<!--end col-->
			</div>
		</div>

	</div>
{% endblock %}
